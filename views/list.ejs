<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= shopData.shopName %> - Book List</title>
  <link rel="stylesheet" href="<%= process.env.BASE_PATH %>/main.css">
</head>
<body>
  <h1><%= shopData.shopName %></h1>
  <h2>Available Books:</h2>

  <% if (!availableBooks || availableBooks.length === 0) { %>
    <p>No books found.</p>
  <% } else { %>
    <ul>
      <% availableBooks.forEach(book => { %>
        <li><%= book.name %> — £<%= Number(book.price).toFixed(2) %></li>
      <% }) %>
    </ul>
  <% } %>

  <p><a href="<%= process.env.BASE_PATH %>/">Back to home</a></p>
</body>
</html>
