<!doctype html>
<html>
<head>
    <title>Registered Users</title>
    <link rel="stylesheet" type="text/css" href="/main.css">
</head>
<body class="page-list-users">

    <h1>Registered Users</h1>

    <% if (users.length === 0) { %>
        <p>No users found.</p>
    <% } else { %>

    <table class ="users-table">
        <thead>
            <tr>
                <th>Username</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.first_name %></td>
                    <td><%= user.last_name %></td>
                    <td><%= user.email %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <% } %>
    <p><a href="/">Back to home</a></p>
</body>
</html>
