<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Add a Book — <%= shopData.shopName %></title>
  <link rel="stylesheet" href="<%= process.env.BASE_PATH %>/main.css">
</head>
<body>
  <h1>Add a Book to <%= shopData.shopName %></h1>

  <% if (typeof error !== 'undefined') { %>
    <p style="color:red;"><%= error %></p>
  <% } %>

  <form method="POST" action="<%= process.env.BASE_PATH %>/books/add">
    <label>Book Name:
      <input type="text" name="name" required>
    </label>

    <label>Book Price (£):
      <input type="number" name="price" step="0.01" required>
    </label>

    <button type="submit">Add Book</button>
  </form>

  <p><a href="<%= process.env.BASE_PATH %>/">Back to home</a></p>
</body>
</html>
